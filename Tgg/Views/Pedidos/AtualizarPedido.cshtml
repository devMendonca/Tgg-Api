@model PedidosViewModel

<h3>Atualizar Pedido</h3>
<hr />
<form asp-action="AtualizarPedido">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="pedidoId" />
    <div class="form-group">
        <label asp-for="NomeComprador" class="control-label"></label>
        <input asp-for="NomeComprador" class="form-control" />
        <span asp-validation-for="NomeComprador" class="text-danger"></span>
    </div>

    <div class="row">
        <div class="form-group col-md-6">
            <label asp-for="PrecoTotal" class="control-label"></label>
            <input asp-for="PrecoTotal" class="form-control" />
            <span asp-validation-for="PrecoTotal" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Telefone" class="control-label"></label>
            <input asp-for="Telefone" class="form-control" />
            <span asp-validation-for="Telefone" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="ProdutoId" class="control-label"></label>
            <input asp-for="ProdutoId" class="form-control" />
            <span asp-validation-for="ProdutoId" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group" style="padding-top: 10px">
        <input type="submit" value="Salvar" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-info">Retornar</a>
    </div>
    @if (@ViewBag.Erro != null)
    {
        <div style="color:red">
            <h4>@ViewBag.Erro</h4>
        </div>
    }
</form>
